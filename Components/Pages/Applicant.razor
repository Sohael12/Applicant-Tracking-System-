@page "/applicants"
@using Microsoft.AspNetCore.Components.Authorization
@using Stageproject_ATS_AP2025Q2.Models
@using Stageproject_ATS_AP2025Q2.Services
@using Stageproject_ATS_AP2025Q2.Utilities
@using static StatusHistory
@inject ApplicationService ApplicationService
@inject IStateNotifier StateNotifier
@inject AuthenticationStateProvider AuthProvider
@inject UserRoleService RoleService
@inject IServiceProvider ServiceProvider

@implements IDisposable
@rendermode InteractiveServer

<div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Admin or Management Role Check -->
        @if (!(IsAdmin || IsManager))
        {
            <div class="text-center py-12">
                <div class="max-w-md mx-auto">
                    <div class="w-20 h-20 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">Access Denied</h2>
                    <p class="text-gray-600 mb-6">You don't have permission to view this page.</p>
                    <NavLink href="/" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        Return to Dashboard
                    </NavLink>
                </div>
            </div>
        }
        else
        {
            <!-- Header Section -->
            <div class="mb-8">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                    <div class="mb-4 sm:mb-0">
                        <h1 class="text-3xl font-bold text-gray-900 mb-2">Applicant Management</h1>
                        <p class="text-lg text-gray-600">Review and manage all job applications in one place</p>
                    </div>
                    <div class="flex items-center space-x-3">
                        <div class="text-sm text-gray-500 bg-white px-3 py-2 rounded-lg border border-gray-200">
                            <span class="font-medium text-gray-700">@FilteredApplications.Count()</span> of 
                            <span class="font-medium text-gray-700">@applications?.Count</span> applications
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(SuccessMessage))
            {
                <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg flex items-start">
                    <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="text-green-800">
                        <div class="font-medium">Success</div>
                        <div class="text-sm mt-1">@SuccessMessage</div>
                    </div>
                </div>
            }

            <!-- Filters Card -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-lg font-semibold text-gray-900 flex items-center">
                        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.414A1 1 0 013 6.707V4z"></path>
                        </svg>
                        Filter Applications
                    </h2>
                    @if (HasActiveFilters)
                    {
                        <button @onclick="ClearAllFilters" 
                                class="inline-flex items-center px-3 py-1 text-sm text-blue-600 hover:text-blue-800 font-medium bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                            Clear All
                        </button>
                    }
                </div>
                
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <!-- Name Filter -->
                    <div>
                        <label for="nameFilter" class="block text-sm font-medium text-gray-700 mb-2">Applicant Name</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <input type="text" id="nameFilter" @bind="nameFilter" @bind:event="oninput"
                                   list="nameSuggestions"
                                   class="pl-10 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                   placeholder="Search by applicant name..." />
                        </div>
                        <datalist id="nameSuggestions">
                            @foreach (var name in ApplicantNames)
                            {
                                <option value="@name"></option>
                            }
                        </datalist>
                    </div>

                    <!-- Vacancy Filter -->
                    <div>
                        <label for="vacancyFilter" class="block text-sm font-medium text-gray-700 mb-2">Job Position</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <input type="text" id="vacancyFilter" @bind="vacancyFilter" @bind:event="oninput"
                                   list="vacancySuggestions"
                                   class="pl-10 w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                   placeholder="Search by job title..." />
                        </div>
                        <datalist id="vacancySuggestions">
                            @foreach (var vacancy in VacancyTitles)
                            {
                                <option value="@vacancy"></option>
                            }
                        </datalist>
                    </div>

                    <!-- Status Filter -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Application Status</label>
                        <div class="relative">
                            <button @onclick="() => showStatusFilter = !showStatusFilter"
                                    class="w-full flex items-center justify-between px-4 py-3 border border-gray-300 rounded-lg bg-white hover:bg-gray-50 transition-colors text-left">
                                <span class="text-gray-700">
                                    @if (SelectedStatuses.Count == 0)
                                    {
                                        <span>All statuses</span>
                                    }
                                    else
                                    {
                                        <span class="font-medium">@SelectedStatuses.Count selected</span>
                                    }
                                </span>
                                <svg class="w-5 h-5 text-gray-400 transform transition-transform @(showStatusFilter ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>

                            @if (showStatusFilter)
                            {
                                <div class="absolute mt-1 w-full bg-white border border-gray-300 rounded-lg shadow-lg z-10 max-h-60 overflow-y-auto">
                                    <div class="p-3 space-y-2">
                                        @foreach (var status in AllStatuses)
                                        {
                                            <label class="flex items-center text-sm text-gray-700 hover:bg-gray-50 px-2 py-2 rounded transition cursor-pointer">
                                                <input 
                                                    type="checkbox" 
                                                    checked="@SelectedStatuses.Contains(status)" 
                                                    @onchange="() => ToggleStatusFilter(status)"
                                                    class="form-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500"
                                                />
                                                <span class="ml-3">@status</span>
                                            </label>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Active Filters Display -->
                @if (SelectedStatuses.Count > 0)
                {
                    <div class="mt-6 pt-4 border-t border-gray-200">
                        <div class="flex items-center space-x-2 mb-3">
                            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-sm font-medium text-gray-700">Active filters:</span>
                        </div>
                        <div class="flex flex-wrap gap-2">
                            @foreach (var status in SelectedStatuses)
                            {
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                    @status
                                    <button @onclick="() => ToggleStatusFilter(status)" class="ml-1.5 hover:bg-blue-200 rounded-full p-0.5 transition-colors">
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    </button>
                                </span>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Applications Content -->
            @if (applications == null)
            {
                <!-- Loading State -->
                <div class="text-center py-16 bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-blue-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Loading Applications</h3>
                    <p class="text-gray-600">Please wait while we load the applicant data...</p>
                </div>
            }
            else if (!FilteredApplications.Any())
            {
                <!-- Empty State -->
                <div class="text-center py-16 bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-600 mb-2">No applications found</h3>
                    <p class="text-gray-500 mb-6 max-w-md mx-auto">
                        @(HasActiveFilters ? "No applications match your current filters." : "There are no applications to display at the moment.")
                    </p>
                    @if (HasActiveFilters)
                    {
                        <button @onclick="ClearAllFilters" 
                                class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                            </svg>
                            Clear Filters
                        </button>
                    }
                </div>
            }
            else
            {
                <!-- Applications Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                    @foreach (var app in FilteredApplications)
                    {
                        var latestStatus = app.StatusHistories?.OrderByDescending(s => s.Date).FirstOrDefault()?.Status;
                        var statusDisplay = latestStatus?.GetDisplayName() ?? "No status";
                        var statusColor = GetStatusColor(latestStatus);
                        var statusIcon = GetStatusIcon(latestStatus);

                        <div class="bg-white rounded-xl shadow-sm border border-gray-200 hover:shadow-lg transition-all duration-300 overflow-hidden group">
                            <!-- Header with gradient -->
                            <div class="bg-gradient-to-r from-blue-600 to-indigo-700 p-5">
                                <div class="flex items-start justify-between">
                                    <div class="flex items-center space-x-3">
                                    <div class="flex-shrink-0 h-12 w-12 bg-white rounded-full flex items-center justify-center text-blue-600 font-semibold text-sm">
                                    @GetApplicantInitials(app.User.FirstName, app.User.LastName)
                                     </div>

                                        <div>
                                            <h3 class="text-lg font-semibold text-white truncate max-w-[150px]">@app.User.FirstName @app.User.LastName</h3>
                                            <p class="text-blue-100 text-sm truncate max-w-[180px]">@app.Vacancy.Title</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="p-5 space-y-4">
                                <!-- Status Badge -->
                                <div class="flex justify-start">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @statusColor">
                                        <i class="@statusIcon mr-2 text-xs"></i>
                                        @statusDisplay
                                    </span>
                                </div>

                                <!-- Contact Information -->
                                <div class="space-y-3">
                                    <div class="flex items-center text-sm text-gray-600">
                                        <svg class="w-4 h-4 text-gray-400 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                        </svg>
                                        <span class="truncate">@app.User.Email</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(app.User.PhoneNumber))
                                    {
                                        <div class="flex items-center text-sm text-gray-600">
                                            <svg class="w-4 h-4 text-gray-400 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                            </svg>
                                            <span>@app.User.PhoneNumber</span>
                                        </div>
                                    }
                                </div>

                                <!-- Resume Section -->
                                @if (!string.IsNullOrEmpty(app.ResumeFilePath))
                                {
                                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-200">
                                        <div class="flex items-center">
                                            <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                            </svg>
                                            <span class="text-sm text-gray-700 font-medium">Resume</span>
                                        </div>
                                        <a href="/@app.ResumeFilePath" download
                                           class="inline-flex items-center px-3 py-1.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                                            </svg>
                                            Download
                                        </a>
                                    </div>
                                }

                                <!-- Action Buttons -->
<div class="flex items-center justify-between pt-4 border-t border-gray-200">
    <NavLink href="@($"/applications/history/{app.Id}")"
             class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium group-hover:shadow-md">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        View History
    </NavLink>
</div>

                                </div>
                           
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>

@code {
    private List<Application>? applications;
    private string nameFilter = string.Empty;
    private string vacancyFilter = string.Empty;
    private bool showStatusFilter = false;
    private bool IsAdmin = false;
    private bool IsManager = false;
    private HashSet<string> SelectedStatuses = new();
    private string SuccessMessage = "";

    private bool HasActiveFilters => !string.IsNullOrWhiteSpace(nameFilter) || 
                                   !string.IsNullOrWhiteSpace(vacancyFilter) || 
                                   SelectedStatuses.Count > 0;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (!string.IsNullOrEmpty(userId))
        {
            using var scope = ServiceProvider.CreateScope();
            var roleService = scope.ServiceProvider.GetRequiredService<UserRoleService>();

            IsAdmin = await roleService.IsAdminAsync(userId);
            IsManager = await roleService.IsManagerAsync(userId);
        }

        if (IsAdmin || IsManager)
        {
            applications = await ApplicationService.GetAllAsync();
            StateNotifier.StateChanged += StateHasChanged;
        }
    }

    private IEnumerable<string> ApplicantNames => applications?
        .Select(a => $"{a.User.FirstName} {a.User.LastName}")
        .Distinct()
        .OrderBy(n => n) ?? Enumerable.Empty<string>();

    private IEnumerable<string> VacancyTitles => applications?
        .Select(a => a.Vacancy.Title)
        .Distinct()
        .OrderBy(t => t) ?? Enumerable.Empty<string>();

    private IEnumerable<string> AllStatuses => Enum.GetValues(typeof(ApplicationStatus))
        .Cast<ApplicationStatus>()
        .Select(s => s.GetDisplayName());

    private IEnumerable<Application> FilteredApplications =>
        applications?.Where(app =>
            (string.IsNullOrWhiteSpace(nameFilter) || $"{app.User.FirstName} {app.User.LastName}".Contains(nameFilter, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrWhiteSpace(vacancyFilter) || app.Vacancy.Title.Contains(vacancyFilter, StringComparison.OrdinalIgnoreCase)) &&
            (SelectedStatuses.Count == 0 || (
                app.StatusHistories?.OrderByDescending(s => s.Date).FirstOrDefault()?.Status.GetDisplayName() is string latestStatus &&
                SelectedStatuses.Contains(latestStatus)
            ))
        ) ?? Enumerable.Empty<Application>();

    private void ToggleStatusFilter(string status)
    {
        if (SelectedStatuses.Contains(status))
            SelectedStatuses.Remove(status);
        else
            SelectedStatuses.Add(status);
        StateHasChanged();
    }

    private void ClearAllFilters()
    {
        nameFilter = string.Empty;
        vacancyFilter = string.Empty;
        SelectedStatuses.Clear();
        showStatusFilter = false;
        StateHasChanged();
    }

    private string GetApplicantInitials(string firstName, string lastName)
    {
        var first = firstName?.FirstOrDefault().ToString() ?? "";
        var last = lastName?.FirstOrDefault().ToString() ?? "";
        return $"{first}{last}".ToUpper();
    }

    private string GetStatusColor(StatusHistory.ApplicationStatus? status)
    {
        return status switch
        {
            StatusHistory.ApplicationStatus.Rejected => "bg-red-100 text-red-800",
            StatusHistory.ApplicationStatus.Accepted => "bg-green-100 text-green-800",
            StatusHistory.ApplicationStatus.InitialScreening => "bg-yellow-100 text-yellow-800",
            StatusHistory.ApplicationStatus.InterviewWithHR => "bg-blue-100 text-blue-800",
            StatusHistory.ApplicationStatus.InterviewWithManager => "bg-purple-100 text-purple-800",
            StatusHistory.ApplicationStatus.SecondOpinion => "bg-orange-100 text-orange-800",
            StatusHistory.ApplicationStatus.TrainingPhase => "bg-teal-100 text-teal-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }

    private string GetStatusIcon(StatusHistory.ApplicationStatus? status)
    {
        return status switch
        {
            StatusHistory.ApplicationStatus.Rejected => "fas fa-times",
            StatusHistory.ApplicationStatus.Accepted => "fas fa-check",
            StatusHistory.ApplicationStatus.InitialScreening => "fas fa-search",
            StatusHistory.ApplicationStatus.InterviewWithHR => "fas fa-user-tie",
            StatusHistory.ApplicationStatus.InterviewWithManager => "fas fa-users",
            StatusHistory.ApplicationStatus.SecondOpinion => "fas fa-question-circle",
            StatusHistory.ApplicationStatus.TrainingPhase => "fas fa-graduation-cap",
            _ => "fas fa-question"
        };
    }

    public void Dispose()
    {
        StateNotifier.StateChanged -= StateHasChanged;
    }
}