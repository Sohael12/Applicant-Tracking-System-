@page "/admin"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using Stageproject_ATS_AP2025Q2.Data
@using Stageproject_ATS_AP2025Q2.Models
@using Syncfusion.Blazor.RichTextEditor
@inject AppDbContext Context
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<main class="max-w-7xl mx-auto px-6 py-10">
    @if (!IsAdmin)
    {
        <div class="text-center text-red-600 font-bold text-xl bg-red-50 p-6 rounded-lg border border-red-200">
            <i class="fas fa-ban mr-2"></i>You do not have access to this page.
        </div>
    }
    else
    {
        <div class="mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Admin Dashboard</h1>
            <p class="text-gray-600">Manage users and email templates</p>
        </div>

        @if (!string.IsNullOrEmpty(SuccessMessage))
        {
            <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg flex items-center text-green-800">
                <i class="fas fa-check-circle mr-3 text-green-500"></i>
                <span>@SuccessMessage</span>
            </div>
        }
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg flex items-center text-red-800">
                <i class="fas fa-exclamation-triangle mr-3 text-red-500"></i>
                <span>@ErrorMessage</span>
            </div>
        }

        <!-- Navigation Tabs -->
        <div class="mb-8 border-b border-gray-200">
            <nav class="flex space-x-8">
                <button @onclick="@(() => ActiveTab = "users")" 
                        class="@GetTabClass("users") py-4 px-1 border-b-2 font-medium text-sm">
                    <i class="fas fa-users mr-2"></i>Manage Users
                </button>
                <button @onclick="@(() => ActiveTab = "templates")" 
                        class="@GetTabClass("templates") py-4 px-1 border-b-2 font-medium text-sm">
                    <i class="fas fa-envelope mr-2"></i>Template Editor
                </button>
                
            </nav>
        </div>

        <!-- Users Management -->
        @if (ActiveTab == "users")
        {
            <section class="bg-white rounded-xl shadow-sm border border-gray-200">
                <div class="px-6 py-5 border-b border-gray-200">
                    <h2 class="text-xl font-semibold text-gray-900">User Role Management</h2>
                </div>
                
                <div class="p-6">
                    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
                        <button @onclick="DownloadUsersReport"
                                class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors shadow-sm">
                            <i class="fas fa-download mr-2"></i>Download Users Report
                        </button>

                        <div class="relative w-full sm:w-64">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-search text-gray-400"></i>
                            </div>
                            <input type="text" @bind="searchTerm" 
                                   placeholder="Search by name or email..." 
                                   class="pl-10 w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                        </div>
                    </div>

                    @if (users == null)
                    {
                        <div class="text-center py-8">
                            <i class="fas fa-spinner fa-spin text-blue-500 text-2xl mb-2"></i>
                            <p class="text-gray-600">Loading users...</p>
                        </div>
                    }
                    else
                    {
                        <div class="overflow-hidden border border-gray-200 rounded-lg shadow-sm">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    @foreach (var user in FilteredUsers)
                                    {
                                        <tr class="hover:bg-gray-50 transition-colors">
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="flex-shrink-0 h-10 w-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-semibold">
                                                        @GetUserInitials(user)
                                                    </div>
                                                    <div class="ml-4">
                                                        <div class="text-sm font-medium text-gray-900">@user.FirstName @user.LastName</div>
                                                        <div class="text-sm text-gray-500">@user.Email</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <select @bind="user.Role" 
                                                        class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
                                                    <option value="User">User</option>
                                                    <option value="Admin">Admin</option>
                                                    <option value="Management">Management</option>
                                                </select>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                @if (user.IsActive)
                                                {
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                        <i class="fas fa-circle mr-1 text-green-500" style="font-size: 6px;"></i>Active
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                        <i class="fas fa-circle mr-1 text-red-500" style="font-size: 6px;"></i>Inactive
                                                    </span>
                                                }
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                                <div class="flex items-center space-x-2">
                                                    <button @onclick="@(() => UpdateRole(user))"
                                                            class="inline-flex items-center px-3 py-1.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm">
                                                        <i class="fas fa-save mr-1"></i>Save
                                                    </button>

                                                    <button @onclick="@(() => ToggleActive(user))"
                                                            class="inline-flex items-center px-3 py-1.5 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors text-sm">
                                                        <i class="fas @(user.IsActive ? "fa-user-slash" : "fa-user-check") mr-1"></i>
                                                        @(user.IsActive ? "Deactivate" : "Activate")
                                                    </button>

                                                    @if (user.Id != CurrentUserId)
                                                    {
                                                        <button @onclick="@(() => DeleteUser(user))"
                                                                class="inline-flex items-center px-3 py-1.5 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm">
                                                            <i class="fas fa-trash mr-1"></i>Delete
                                                        </button>
                                                    }

                                                    <button @onclick="@(() => DownloadUserReport(user.Id))"
                                                            class="inline-flex items-center px-3 py-1.5 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm">
                                                        <i class="fas fa-file-download mr-1"></i>Report
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </section>
        }

else if (ActiveTab == "templates")
{
    <section class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-5 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900">Email Template Editor</h2>
        </div>
        
        <div class="p-6">
            @if (templates == null || !templates.Any())
            {
                <div class="text-center py-8">
                    <i class="fas fa-spinner fa-spin text-blue-500 text-2xl mb-2"></i>
                    <p class="text-gray-600">Loading templates...</p>
                </div>
            }
            else
            {
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <div class="lg:col-span-1">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Select Template</label>
                        <select @bind="SelectedTemplateName" @bind:after="OnTemplateChange"
                                class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            @foreach (var t in templates.Keys)
                            {
                                <option value="@t">@t</option>
                            }
                        </select>

                        <!-- Template Variables Panel -->
                        <div class="mt-4 p-4 bg-blue-50 rounded-lg border border-blue-200">
                            <h4 class="font-medium text-blue-900 mb-2">Template Variables</h4>
                            <ul class="text-sm text-blue-700 space-y-1">
                                @* Variables per template *@
                                @if (SelectedTemplateName == "RegisterConfirmation")
                                {
                                    <li><code class="bg-blue-100 px-1 rounded">{confirmationLink}</code></li>
                                }
                                else if (SelectedTemplateName == "MeetingEmail")
                                {
                                    <li><code class="bg-blue-100 px-1 rounded">{FullName}</code></li>
                                    <li><code class="bg-blue-100 px-1 rounded">{InterviewDate}</code></li>
                                    <li><code class="bg-blue-100 px-1 rounded">{InterviewTime}</code></li>
                                    <li><code class="bg-blue-100 px-1 rounded">{VacancyTitle}</code></li>
                                }
                                else if (SelectedTemplateName == "ExtraMeetingEmail")
                                {
                                    <li><code class="bg-blue-100 px-1 rounded">{FirstName}</code></li>
                                    <li><code class="bg-blue-100 px-1 rounded">{LastName}</code></li>
                                    <li><code class="bg-blue-100 px-1 rounded">{Date}</code></li>
                                    <li><code class="bg-blue-100 px-1 rounded">{Time}</code></li>
                                    <li><code class="bg-blue-100 px-1 rounded">{Subject}</code></li>
                                    <li><code class="bg-blue-100 px-1 rounded">{TeamsLink}</code></li>
                                }

                                @* Additional available variables *@
                                <li><code class="bg-blue-100 px-1 rounded">{PlannerName}</code></li>
                                <li><code class="bg-blue-100 px-1 rounded">{CandidateName}</code></li>
                                <li><code class="bg-blue-100 px-1 rounded">{InterviewDate}</code></li>
                                <li><code class="bg-blue-100 px-1 rounded">{InterviewTime}</code></li>
                                <li><code class="bg-blue-100 px-1 rounded">{VacancyTitle}</code></li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="lg:col-span-2">
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Editing: @SelectedTemplateName</label>
                            <SfRichTextEditor @bind-Value="EditorContent" Height="400px" Placeholder="Type your template here...">
                            </SfRichTextEditor>
                        </div>

                        <div class="flex justify-end">
                            <button @onclick="SaveSelectedTemplate"
                                    class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors shadow-sm">
                                <i class="fas fa-save mr-2"></i>Save Template
                            </button>
                        </div>

                        <div class="mt-8">
                            <h3 class="text-lg font-medium text-gray-900 mb-3">Live Preview</h3>
                            <div class="border border-gray-200 rounded-lg p-6 bg-gray-50 min-h-[150px]">
                                @((MarkupString)templates[SelectedTemplateName].HtmlContent)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
}

     
    }
</main>

@code {
    private List<AppUser> users = new();
    private bool IsAdmin = false;
    private string ActiveTab = "users";
    private string searchTerm = "";
    private string SuccessMessage = "";
    private string ErrorMessage = "";
    private string? CurrentUserId;

    private Dictionary<string, Template> templates = new();
    private string SelectedTemplateName = "RegisterConfirmation";
    private string EditorContent = "";
    private string PlannerEditorContent = "";

    private string GetUserInitials(AppUser user)
    {
        var first = user.FirstName?.FirstOrDefault().ToString() ?? "";
        var last = user.LastName?.FirstOrDefault().ToString() ?? "";
        return $"{first}{last}".ToUpper();
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            CurrentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (!string.IsNullOrEmpty(CurrentUserId))
            {
                var role = await Context.UserRoles
                    .Where(r => r.UserId == CurrentUserId)
                    .Select(r => r.Role)
                    .FirstOrDefaultAsync();

                IsAdmin = role == "Admin";
            }
        }

        if (IsAdmin)
        {
            users = await Context.Users.ToListAsync();

            foreach (var u in users)
            {
                var userRole = await Context.UserRoles
                    .Where(r => r.UserId == u.Id)
                    .Select(r => r.Role)
                    .FirstOrDefaultAsync();

                u.Role = userRole ?? "User";
                if (u.IsActive == null) u.IsActive = true;
            }

            await LoadTemplates();
        }
    }

    private async Task UpdateRole(AppUser user)
    {
        try
        {
            var existingRole = await Context.UserRoles.FirstOrDefaultAsync(r => r.UserId == user.Id);
            if (existingRole != null)
                existingRole.Role = user.Role;
            else
                await Context.UserRoles.AddAsync(new UserRole { UserId = user.Id, Role = user.Role });

            await Context.SaveChangesAsync();
            SuccessMessage = $"Role for {user.Email} updated to {user.Role}.";
            ErrorMessage = "";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error updating role: {ex.Message}";
            StateHasChanged();
        }
    }

    private async Task ToggleActive(AppUser user)
    {
        try
        {
            user.IsActive = !user.IsActive;
            Context.Users.Update(user);
            await Context.SaveChangesAsync();

            SuccessMessage = user.IsActive
                ? $"User {user.Email} activated."
                : $"User {user.Email} deactivated.";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error toggling user: {ex.Message}";
            StateHasChanged();
        }
    }

    private async Task DeleteUser(AppUser user)
    {
        try
        {
            if (user.Id == CurrentUserId)
            {
                ErrorMessage = "You cannot delete your own account!";
                StateHasChanged();
                return;
            }

            var roles = await Context.UserRoles.Where(r => r.UserId == user.Id).ToListAsync();
            if (roles.Any()) Context.UserRoles.RemoveRange(roles);

            Context.Users.Remove(user);
            await Context.SaveChangesAsync();
            users.Remove(user);

            SuccessMessage = $"User {user.Email} deleted.";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting user: {ex.Message}";
            StateHasChanged();
        }
    }

    private string GetTabClass(string tab)
    {
        var baseClass = "py-4 px-1 border-b-2 font-medium text-sm whitespace-nowrap";
        return tab == ActiveTab
            ? $"{baseClass} border-blue-500 text-blue-600"
            : $"{baseClass} border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300";
    }

    private IEnumerable<AppUser> FilteredUsers =>
        string.IsNullOrWhiteSpace(searchTerm)
            ? users
            : users.Where(u =>
                (u.Email?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                ($"{u.FirstName} {u.LastName}".Contains(searchTerm, StringComparison.OrdinalIgnoreCase)));

    private void DownloadUsersReport()
    {
        var url = NavigationManager.BaseUri + "api/reports/users";
        NavigationManager.NavigateTo(url, true);
    }

    private void DownloadUserReport(string userId)
    {
        var url = NavigationManager.BaseUri + $"api/reports/user/{userId}";
        NavigationManager.NavigateTo(url, true);
    }
private async Task LoadTemplates()
{
    templates.Clear();

    var allTemplates = await Context.Templates.ToListAsync();

    foreach (var template in allTemplates)
    {
        templates[template.Name] = template;
    }

    // Selecteer standaard de eerste template
    if (templates.Any())
    {
        SelectedTemplateName = templates.Keys.First();
        EditorContent = templates[SelectedTemplateName].HtmlContent;
    }
}


    private void OnTemplateChange()
    {
        EditorContent = templates[SelectedTemplateName].HtmlContent;
        StateHasChanged();
    }

    private async Task SaveSelectedTemplate()
    {
        try
        {
            templates[SelectedTemplateName].HtmlContent = EditorContent;
            Context.Templates.Update(templates[SelectedTemplateName]);
            await Context.SaveChangesAsync();

            SuccessMessage = $"Template '{SelectedTemplateName}' saved successfully.";
            ErrorMessage = "";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error saving template: {ex.Message}";
            SuccessMessage = "";
            StateHasChanged();
        }
    }

    private async Task SavePlannerTemplate()
    {
        try
        {
            templates["PlannerInterview"].HtmlContent = PlannerEditorContent;
            Context.Templates.Update(templates["PlannerInterview"]);
            await Context.SaveChangesAsync();

            SuccessMessage = "Planner template saved successfully.";
            ErrorMessage = "";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error saving planner template: {ex.Message}";
            SuccessMessage = "";
            StateHasChanged();
        }
    }

    
}