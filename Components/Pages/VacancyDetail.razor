@page "/vacancy/{Id:int}"
@using Microsoft.AspNetCore.Components.Authorization
@using Stageproject_ATS_AP2025Q2.Services
@using Stageproject_ATS_AP2025Q2.Models
@inject VacancyService VacancyService
@inject ApplicationService ApplicationService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthProvider
@inject IServiceProvider ServiceProvider

@rendermode InteractiveServer

<PageTitle>Vacancy Details - @(vacancy?.Title ?? "Loading...")</PageTitle>

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        @if (vacancy == null)
        {
            <!-- Loading State -->
            <div class="text-center py-16 bg-white rounded-xl shadow-sm border border-gray-200">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-blue-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Loading Vacancy Details</h3>
                <p class="text-gray-600">Please wait while we load the vacancy information...</p>
            </div>
        }
        else
        {
            <!-- Back Navigation -->
          <!-- Back Navigation -->
<div class="mb-6">
    <button @onclick='() => NavigationManager.NavigateTo("/vacancies")'
        class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900 font-medium transition-colors">
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    Back to Vacancies
</button>

</div>


            <!-- Main Content Card -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
                <!-- Header Section with Gradient -->
                <div class="bg-gradient-to-r from-blue-600 to-indigo-700 px-8 py-6">
                    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                        <div class="mb-4 lg:mb-0">
                            <h1 class="text-3xl font-bold text-white mb-2">@vacancy.Title</h1>
                            <div class="flex items-center text-blue-100">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                                <span class="text-sm">Vacancy ID: #@vacancy.Id</span>
                            </div>
                        </div>

                        <!-- Admin Actions -->
                        @if (IsAdmin)
                        {
                            <div class="flex space-x-3">
                              <NavLink href="@($"/editvacancy/{vacancy.Id}")"
         class="inline-flex items-center px-5 py-2.5 bg-white bg-opacity-20 text-black rounded-lg hover:bg-opacity-30 transition-all duration-200 font-medium border border-white border-opacity-30">
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
    </svg>
    Edit Vacancy
</NavLink>

                                <button @onclick="ShowDeleteModal"
                                        class="inline-flex items-center px-5 py-2.5 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all duration-200 font-medium">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Delete
                                </button>
                            </div>
                        }
                    </div>
                </div>

                <!-- Content Section -->
                <div class="p-8 space-y-8">
                    <!-- Job Description -->
                    <div>
                        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                            <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Job Description
                        </h2>
                        <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
                            <p class="text-gray-700 leading-relaxed whitespace-pre-line">@vacancy.Description</p>
                        </div>
                    </div>

                    <!-- Vacancy Details -->
                    <div>
                        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                            <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Vacancy Details
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Department -->
                            <div class="flex items-center p-4 bg-blue-50 rounded-lg border border-blue-200">
                                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                    </svg>
                                </div>
                                <div>
                                    <div class="text-sm text-blue-600 font-medium">Department</div>
                                    <div class="text-lg font-semibold text-gray-900">@vacancy.Department</div>
                                </div>
                            </div>

                            <!-- Deadline -->
                            <div class="flex items-center p-4 bg-orange-50 rounded-lg border border-orange-200">
                                <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center mr-4">
                                    <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <div class="text-sm text-orange-600 font-medium">Application Deadline</div>
                                    <div class="text-lg font-semibold text-gray-900">
                                        @(vacancy.Deadline?.ToString("MMMM dd, yyyy") ?? "No deadline set")
                                    </div>
                                </div>
                            </div>

                            <!-- Start Date -->
                            <div class="flex items-center p-4 bg-green-50 rounded-lg border border-green-200">
                                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <div class="text-sm text-green-600 font-medium">Start Date</div>
                                    <div class="text-lg font-semibold text-gray-900">@vacancy.StartDate.ToString("MMMM dd, yyyy")</div>
                                </div>
                            </div>

                            <!-- Created By -->
                            <div class="flex items-center p-4 bg-purple-50 rounded-lg border border-purple-200">
                                <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                                    <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <div class="text-sm text-purple-600 font-medium">Created By</div>
                                    <div class="text-lg font-semibold text-gray-900">@vacancy.CreatedBy</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Apply Button (Non-Admin/Non-Manager) -->
                    @if (!(IsAdmin || IsManager))
                    {
                        <div class="text-center pt-6">
                            <NavLink href="@($"/apply/{vacancy.Id}")"
                                     class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200 text-lg">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                                Apply for this Position
                            </NavLink>
                            <p class="text-sm text-gray-500 mt-3">
                                Ready to join our team? Submit your application today!
                            </p>
                        </div>
                    }

                    <!-- Applicants List (Admin Only) -->
                    @if (IsAdmin)
                    {
                        <div class="pt-8 border-t border-gray-200">
                            <div class="flex items-center justify-between mb-6">
                                <h2 class="text-xl font-semibold text-gray-900 flex items-center">
                                    <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                    </svg>
                                    Applicants (@applications.Count)
                                </h2>
                            </div>

                            @if (applications.Count > 0)
                            {
                                <div class="space-y-4">
                                    @foreach (var application in applications)
                                    {
                                        <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow duration-200">
                                            <div class="flex items-center justify-between">
                                                <div class="flex items-center space-x-4">
                                                    <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full flex items-center justify-center text-white font-semibold text-sm">
