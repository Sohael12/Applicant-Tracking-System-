                                                    </div>
                                                    <div>
                                                        <div class="font-medium text-gray-900">
                                                            @application.User?.FirstName @application.User?.LastName
                                                        </div>
                                                        <div class="text-sm text-gray-500">@application.User?.Email</div>
                                                    </div>
                                                </div>
                                                <NavLink href="@($"/applications/history/{application.Id}")"
