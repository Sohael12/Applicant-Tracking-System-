</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-xl shadow-2xl max-w-md w-full p-6 transform transition-all duration-300 scale-100">
            <!-- Modal Header -->
            <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                </div>
                <div>
                    <h2 class="text-xl font-bold text-gray-900">Delete Vacancy</h2>
                    <p class="text-sm text-gray-600">This action cannot be undone</p>
                </div>
            </div>

            <!-- Modal Content -->
            <div class="mb-6">
                <p class="text-gray-700">
                    Are you sure you want to delete the vacancy 
                    <span class="font-semibold text-gray-900">"@vacancy?.Title"</span>? 
                    This will permanently remove the vacancy and all associated data.
                </p>
            </div>

            <!-- Modal Actions -->
            <div class="flex justify-end space-x-3">
                <button @onclick="CancelDelete" 
                        class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors font-medium">
                    Cancel
                </button>
                <button @onclick="PerformDelete" 
                        class="px-4 py-2 bg-red-600 text-white hover:bg-red-700 rounded-lg transition-colors font-medium flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete Vacancy
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private Vacancy vacancy;
    private List<Application> applications = new();
    private bool IsAdmin = false;
    private bool IsManager = false;
    private bool showDeleteModal = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (!string.IsNullOrEmpty(userId))
        {
            using var scope = ServiceProvider.CreateScope();
            var roleService = scope.ServiceProvider.GetRequiredService<UserRoleService>();
            IsAdmin = await roleService.IsAdminAsync(userId);
            IsManager = await roleService.IsManagerAsync(userId);
        }

        vacancy = await VacancyService.GetVacancyByIdAsync(Id);

        if (IsAdmin)
        {
            applications = await ApplicationService.GetApplicationsByVacancyIdAsync(Id);
        }
    }

    private string GetUserInitials(string firstName, string lastName)
    {
        var first = firstName?.FirstOrDefault().ToString() ?? "";
        var last = lastName?.FirstOrDefault().ToString() ?? "";
        return $"{first}{last}".ToUpper();
    }

    private void ShowDeleteModal()
    {
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
    }

    private async Task PerformDelete()
    {
        await VacancyService.DeleteVacancyAsync(vacancy.Id);
        NavigationManager.NavigateTo("/vacancies");
    }
}