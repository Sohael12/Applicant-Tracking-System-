@page "/create-meeting"
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.UI.Services
@using Stageproject_ATS_AP2025Q2.Models
@using Stageproject_ATS_AP2025Q2.Services
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject NavigationManager NavigationManager
@inject ApplicationService ApplicationService
@inject InterviewNoteService InterviewNoteService
@inject UserService UserService
@inject MeetingService MeetingService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IEmailSender EmailSender
@rendermode InteractiveServer

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="text-center mb-10">
            <h1 class="text-3xl font-bold text-gray-900 mb-3">Schedule Interview Meeting</h1>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Create a new interview meeting and invite team members to participate in the candidate evaluation process.
            </p>
        </div>

        <!-- Form Card -->
        <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-indigo-700 px-6 py-4">
                <h2 class="text-xl font-semibold text-white">Meeting Details</h2>
            </div>
            
            <div class="p-8">
                <EditForm Model="formModel" OnValidSubmit="SubmitForm" class="space-y-8">
                    <DataAnnotationsValidator />
                    <Blazorise.ValidationSummary />

                    <!-- Candidate Selection Section -->
                    <div class="space-y-6">
                        <div class="border-b border-gray-200 pb-4">
                            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Candidate Information
                            </h3>
                            
                            <!-- Full Name Autocomplete -->
                            <div class="grid grid-cols-1 gap-6">
                                <div class="relative">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Candidate Full Name</label>
                                    <div class="relative">
                                        <InputText class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                                   @bind-Value="searchText"
                                                   oninput="@OnSearchTextChanged"
                                                   placeholder="Start typing to search for candidates..."
                                                   autocomplete="off" />
                                        <svg class="absolute right-3 top-3.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                                        </svg>
                                    </div>
                                    @if (showSuggestions && filteredUsers.Any())
                                    {
                                        <ul class="absolute z-10 w-full bg-white border border-gray-300 rounded-lg max-h-60 overflow-auto mt-1 shadow-xl">
                                            @foreach (var user in filteredUsers)
                                            {
                                                <li class="px-4 py-3 hover:bg-blue-50 cursor-pointer border-b border-gray-100 last:border-b-0 transition-colors" 
                                                    @onclick="@(() => SelectUser(user))">
                                                    <div class="font-medium text-gray-900">@($"{user.FirstName} {user.LastName}")</div>
                                                    <div class="text-sm text-gray-500">@user.Email</div>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    <ValidationMessage For="@(() => formModel.FullName)" class="text-sm text-red-500 mt-1" />
                                </div>

                                <!-- Application Dropdown -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Application</label>
                                    <div class="relative">
                                        <InputSelect class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors appearance-none"
                                                     @bind-Value="formModel.ApplicationId"
                                                     disabled="@(candidateApplications.Count == 0)">
                                            @if (candidateApplications.Count == 0)
                                            {
                                                <option value="">-- No Applications Found --</option>
                                            }
                                            else
                                            {
                                                <option value="">-- Select Application --</option>
                                                @foreach (var app in candidateApplications)
                                                {
                                                    <option value="@app.Id">@app.Vacancy.Title</option>
                                                }
                                            }
                                        </InputSelect>
                                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                            </svg>
                                        </div>
                                    </div>
                                    <ValidationMessage For="@(() => formModel.ApplicationId)" class="text-sm text-red-500 mt-1" />
                                </div>
                            </div>
                        </div>

                        <!-- Interview Details Section -->
                        <div class="border-b border-gray-200 pb-4">
                            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                Interview Schedule
                            </h3>
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <!-- Interview Date -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Interview Date</label>
                                    <div class="relative">
                                        <InputDate class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" 
                                                   @bind-Value="formModel.InterviewDate" />
                                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                    <ValidationMessage For="@(() => formModel.InterviewDate)" class="text-sm text-red-500 mt-1" />
                                </div>

                                <!-- Interview Time -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Interview Time</label>
                                    <div class="relative">
                                        <InputText class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                                   @bind-Value="InterviewTimeString"
                                                   placeholder="HH:MM (24-hour format)" />
                                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-700">
                                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                    <ValidationMessage For="@(() => formModel.InterviewTime)" class="text-sm text-red-500 mt-1" />
                                </div>
                            </div>
                        </div>

                        <!-- Team Invitation Section -->
                        <div class="border-b border-gray-200 pb-4">
                            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                                Invite Team Members
                            </h3>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-3">Select Administrators & Managers</label>
                                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 max-h-60 overflow-y-auto p-2">
                                        @foreach (var user in adminManagementUsers)
                                        {
                                            <label class="flex items-start space-x-3 p-3 rounded-lg hover:bg-white transition-colors cursor-pointer border border-transparent hover:border-gray-200">
                                                <input type="checkbox" @bind="user.IsSelected" class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                                                <div class="flex-1 min-w-0">
                                                    <div class="flex items-center justify-between">
                                                        <span class="text-sm font-medium text-gray-900">@($"{user.FirstName} {user.LastName}")</span>
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(user.Role == "Admin" ? "bg-purple-100 text-purple-800" : "bg-blue-100 text-blue-800")">
                                                            @user.Role
                                                        </span>
                                                    </div>
                                                    <p class="text-sm text-gray-500 truncate">@user.Email</p>
                                                </div>
                                            </label>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Comment Section -->
                        <div>
                            <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                                <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                                </svg>
                                Additional Information
                            </h3>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Meeting Notes</label>
                                <InputTextArea class="w-full border border-gray-300 rounded-lg px-4 py-3 h-32 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
                                               @bind-Value="formModel.Comment"
                                               placeholder="Add any additional notes, agenda items, or special instructions for this interview..." />
                                <ValidationMessage For="@(() => formModel.Comment)" class="text-sm text-red-500 mt-1" />
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row justify-between items-center pt-6 border-t border-gray-200 space-y-4 sm:space-y-0">
                        <button type="button" 
                                @onclick="@(() => NavigationManager.NavigateTo("/meetings"))"
                                class="w-full sm:w-auto px-6 py-3 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition-colors flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Back to Meetings
                        </button>
                        
                        <button type="submit"
                                class="w-full sm:w-auto bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold px-8 py-3 rounded-lg shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-200 flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                            Schedule Interview
                        </button>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="mt-6 p-4 bg-red-50 border border-red-200 rounded-lg flex items-start">
                            <svg class="w-5 h-5 text-red-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div class="text-red-700">
                                <div class="font-medium">Unable to schedule meeting</div>
                                <div class="text-sm mt-1">@errorMessage</div>
                            </div>
                        </div>
                    }
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private InterviewNote formModel = new();
    private List<Application> allApplications = new(); // alle applicaties
    private List<Application> candidateApplications = new(); // alleen geselecteerde user
    private List<AppUser> usersWithApplications = new();
    private List<SelectableUser> adminManagementUsers = new();
    private List<AppUser> filteredUsers = new();
    private string errorMessage = string.Empty;

    private string searchText = string.Empty;
    private bool showSuggestions = false;
    private string SelectedUserId { get; set; }

    private string InterviewTimeString
    {
        get => formModel.InterviewTime.ToString(@"hh\:mm");
        set
        {
            if (TimeSpan.TryParse(value, out var time))
            {
                formModel.InterviewTime = time;
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var email = user?.FindFirst(ClaimTypes.Email)?.Value ?? "unknown@domain.com";
        formModel.CreatedBy = email;

        formModel.InterviewTime = new TimeSpan(9, 0, 0);
        formModel.InterviewDate = DateOnly.FromDateTime(DateTime.Today);

        allApplications = await ApplicationService.GetAllApplicationsAsync();
        usersWithApplications = await UserService.GetUsersWithApplicationsAsync();

        // Haal alle Admins en Managers
        var adminsAndManagers = await UserService.GetAllAdminsAndManagersAsync();

        adminManagementUsers = new List<SelectableUser>();
        foreach (var u in adminsAndManagers)
        {
            bool isAdmin = await UserService.IsAdminAsync(u.Id);
            adminManagementUsers.Add(new SelectableUser
            {
                Id = u.Id,
                Email = u.Email ?? "",
                FirstName = u.FirstName,
                LastName = u.LastName,
                Role = isAdmin ? "Admin" : "Management"
            });
        }
    }

    private void OnSearchTextChanged(Microsoft.AspNetCore.Components.ChangeEventArgs e)
    {
        searchText = e.Value?.ToString() ?? "";
        formModel.FullName = searchText;

        if (string.IsNullOrWhiteSpace(searchText))
        {
            filteredUsers.Clear();
            showSuggestions = false;
        }
        else
        {
            filteredUsers = usersWithApplications
                .Where(u => $"{u.FirstName} {u.LastName}".Contains(searchText, StringComparison.OrdinalIgnoreCase))
                .Take(10)
                .ToList();

            showSuggestions = filteredUsers.Any();
        }

        // Reset candidate applications bij typen
        candidateApplications.Clear();
        formModel.ApplicationId = 0;
        SelectedUserId = null;
    }

    private void SelectUser(AppUser user)
    {
        searchText = $"{user.FirstName} {user.LastName}";
        formModel.FullName = searchText;

        filteredUsers.Clear();
        showSuggestions = false;

        SelectedUserId = user.Id;

        // Alleen applicaties van geselecteerde user tonen
        candidateApplications = allApplications
            .Where(a => a.UserId == SelectedUserId)
            .ToList();

        formModel.ApplicationId = 0; // reset selectie
    }

    private async Task SubmitForm()
    {
        try
        {
            formModel.CreatedAt = DateTime.Now;

            if (string.IsNullOrWhiteSpace(formModel.CreatedBy))
            {
                errorMessage = "Created By cannot be empty.";
                return;
            }

            if (SelectedUserId == null)
            {
                errorMessage = "Please select a candidate.";
                return;
            }

            if (formModel.ApplicationId == 0)
            {
                errorMessage = "Please select an application.";
                return;
            }

            formModel.InvitedUserEmails = adminManagementUsers
                .Where(u => u.IsSelected)
                .Select(u => u.Email)
                .ToList();

            // Meeting in database opslaan
            await MeetingService.CreateMeetingAsync(formModel);

            // Redirect naar meetings overzicht
            NavigationManager.NavigateTo("/meetings");
        }
        catch (Exception ex)
        {
            errorMessage = $"Er is een fout opgetreden: {ex.Message}";
        }
    }

    private class SelectableUser
    {
        public string Id { get; set; }
        public string Email { get; set; }
        public string FirstName { get; set; }
        public string LastName { get; set; }
        public string Role { get; set; }
        public bool IsSelected { get; set; }
    }
}