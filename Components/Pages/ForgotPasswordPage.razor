@page "/forgotpassword"
@using System.ComponentModel.DataAnnotations
@inject IHttpClientFactory ClientFactory
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-100 flex items-center justify-center p-4">
    <!-- Forgot Password Card -->
    <div class="bg-white rounded-2xl shadow-2xl p-8 w-full max-w-md">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                </svg>
            </div>
            <h1 class="text-2xl font-bold text-gray-900 mb-2">Reset Your Password</h1>
            <p class="text-gray-600">Enter your email to receive a password reset link</p>
        </div>

        <!-- Forgot Password Form -->
        <EditForm Model="Model" OnValidSubmit="HandleSubmit" FormName="ForgotPasswordForm" class="space-y-6">
            <DataAnnotationsValidator />
            <Blazorise.ValidationSummary />

            <!-- Email Input -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                <InputText @bind-Value="Model.Email" placeholder="Enter your registered email"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors" />
                <ValidationMessage For="@(() => Model.Email)" class="text-red-500 text-sm mt-1" />
            </div>

            <!-- Submit Button -->
            <button type="submit" 
                    class="w-full bg-gradient-to-r from-purple-600 to-pink-600 text-white py-3 px-4 rounded-lg font-semibold hover:shadow-lg transform hover:scale-105 transition-all duration-200 focus:ring-4 focus:ring-purple-200">
                Send Reset Link
            </button>

            <!-- Success/Error Message -->
            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="p-4 rounded-lg border @(IsSuccess ? "bg-green-50 border-green-200 text-green-800" : "bg-red-50 border-red-200 text-red-800")">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="@(IsSuccess ? "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" : "M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")"></path>
                        </svg>
                        <span class="text-sm">@Message</span>
                    </div>
                </div>
            }

            <!-- Back to Login Link -->
            <div class="text-center pt-4 border-t border-gray-200">
                <a href="/login" class="text-purple-600 hover:text-purple-800 font-medium transition-colors text-sm">
                    ‚Üê Back to Login
                </a>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private ForgotPasswordModel Model = new ForgotPasswordModel();
    private string Message { get; set; }
    private bool IsSuccess { get; set; }

    /// <summary>
    /// Model for forgot password request containing email address
    /// </summary>
    public class ForgotPasswordModel
    {
        [Required(ErrorMessage = "Email address is required")]
        [EmailAddress(ErrorMessage = "Please enter a valid email address")]
        public string Email { get; set; }
    }

    /// <summary>
    /// Handles forgot password form submission
    /// </summary>
    private async Task HandleSubmit()
    {
        try
        {
            // Create HTTP client and send password reset request
            var client = ClientFactory.CreateClient("LocalApi");
            var response = await client.PostAsJsonAsync("api/account/forgotpassword", Model);

            if (response.IsSuccessStatusCode)
            {
                // Show success message (always show same message for security)
                Message = "If this email address exists in our system, a password reset link has been sent!";
                IsSuccess = true;
            }
            else
            {
                // Handle API errors
                var content = await response.Content.ReadAsStringAsync();
                Message = $"Error: {content}";
                IsSuccess = false;
            }
        }
        catch (Exception ex)
        {
            // Handle network or server errors
            Message = $"Server error: {ex.Message}";
            IsSuccess = false;
        }
    }
}