@page "/register"
@using System.Net.Http.Json
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Authorization
@using static Stageproject_ATS_AP2025Q2.Controllers.AccountController
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager NavigationManager
@inject HttpClient Http
@inject IHttpClientFactory ClientFactory
@rendermode InteractiveServer

@if (!AcceptedGdpr)
{
    <!-- GDPR Consent Modal -->
    <div class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden">
            <!-- Modal Header -->
            <div class="bg-gradient-to-r from-blue-600 to-indigo-700 px-6 py-4">
                <h2 class="text-xl font-bold text-white text-center">Privacy & Terms Agreement</h2>
            </div>
            
            <!-- Modal Content -->
            <div class="p-6 max-h-96 overflow-y-auto">
                <div class="space-y-4 text-gray-700">
                    <p class="font-semibold text-lg text-gray-900">Welcome to Our Platform</p>
                    <p>We are committed to protecting your privacy and personal data in compliance with GDPR regulations.</p>
                    
                    <div class="bg-blue-50 border-l-4 border-blue-500 p-4">
                        <p class="font-medium text-blue-800 mb-2">By creating an account, you agree to:</p>
                        <ul class="list-disc list-inside space-y-2 text-blue-700">
                            <li>Our collection of email, name, address, and password for service provision</li>
                            <li>Secure storage of your data using industry-standard encryption</li>
                            <li>No sharing of personal information with third parties without consent</li>
                            <li>Your right to request data deletion at any time</li>
                            <li>Being at least 16 years of age to use our services</li>
                        </ul>
                    </div>
                    
                    <p class="text-sm text-gray-600">
                        For complete details, please review our 
                        <a href="/terms" class="text-blue-600 hover:text-blue-800 font-medium">Terms & Conditions</a> and 
                        <a href="/privacy" class="text-blue-600 hover:text-blue-800 font-medium">Privacy Policy</a>.
                    </p>
                </div>
            </div>

            <!-- Modal Actions -->
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-center space-x-4">
                <button @onclick="DeclineGdpr" 
                        class="px-6 py-3 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors font-semibold">
                    Decline
                </button>
                <button @onclick="AcceptGdpr" 
                        class="px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:shadow-lg transform hover:scale-105 transition-all duration-200 font-semibold">
                    Accept & Continue
                </button>
            </div>
        </div>
    </div>
}
else
{
    <!-- Registration Form -->
    <div class="min-h-screen bg-gradient-to-br from-green-50 to-blue-100 flex items-center justify-center p-4">
        <div class="bg-white rounded-2xl shadow-2xl p-8 w-full max-w-md">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">Create Account</h1>
                <p class="text-gray-600">Join us and start your journey</p>
            </div>

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg flex items-start">
                    <svg class="w-5 h-5 text-red-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="text-red-800 text-sm">@((MarkupString)Message)</div>
                </div>
            }

            <!-- Registration Form -->
            <EditForm Model="Input" OnValidSubmit="HandleValidSubmit" FormName="RegisterForm" class="space-y-4">
                <DataAnnotationsValidator />
                <Blazorise.ValidationSummary />

                <div class="space-y-4">
                    <!-- Email -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                        <InputText @bind-Value="Input.Email" placeholder="Enter your email" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                    </div>

                    <!-- Password -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                        <InputText type="password" @bind-Value="Input.Password" placeholder="Create a password"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Confirm Password</label>
                        <InputText type="password" @bind-Value="Input.ConfirmPassword" placeholder="Confirm your password"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                    </div>

                    <!-- First Name -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                        <InputText @bind-Value="Input.FirstName" placeholder="Enter your first name"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                    </div>

                    <!-- Last Name -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                        <InputText @bind-Value="Input.LastName" placeholder="Enter your last name"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                    </div>

                    <!-- Address -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Address</label>
                        <InputText @bind-Value="Input.Address" placeholder="Enter your address"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" 
                            class="w-full bg-gradient-to-r from-green-600 to-blue-600 text-white py-3 px-4 rounded-lg font-semibold hover:shadow-lg transform hover:scale-105 transition-all duration-200 focus:ring-4 focus:ring-green-200 mt-6">
                        Create Account
                    </button>
                </div>
            </EditForm>

            <!-- Login Link -->
            <div class="text-center mt-8 pt-6 border-t border-gray-200">
                <p class="text-gray-600 text-sm">
                    Already have an account?
                    <a href="/login" class="text-blue-600 hover:text-blue-800 font-semibold transition-colors ml-1">
                        Sign in here
                    </a>
                </p>
            </div>
        </div>
    </div>
}

@code {
    private RegisterModel Input = new RegisterModel();
    public string Message { get; set; }
    private bool AcceptedGdpr = false;

    /// <summary>
    /// Accepts GDPR terms and shows registration form
    /// </summary>
    private void AcceptGdpr()
    {
        AcceptedGdpr = true;
    }

    /// <summary>
    /// Declines GDPR terms and redirects to home page
    /// </summary>
    private void DeclineGdpr()
    {
        NavigationManager.NavigateTo("/");
    }

    /// <summary>
    /// Handles registration form submission
    /// </summary>
    private async Task HandleValidSubmit()
    {
        Console.WriteLine("Form submitted");

        // Validate password confirmation
        if (Input.Password != Input.ConfirmPassword)
        {
            Message = "Passwords do not match.";
            return;
        }

        try
        {
            // Create HTTP client and send registration request
            var client = ClientFactory.CreateClient("LocalApi");
            var response = await client.PostAsJsonAsync("api/account/register", Input);

            if (response.IsSuccessStatusCode)
            {
                // Redirect to email verification page on success
                NavigationManager.NavigateTo("/check-email");
            }
            else
            {
                // Handle registration errors
                var content = await response.Content.ReadAsStringAsync();
                try
                {
                    var errors = System.Text.Json.JsonSerializer.Deserialize<IEnumerable<string>>(content);
                    Message = string.Join("<br />", errors ?? new[] { "Unknown error occurred." });
                }
                catch
                {
                    Message = $"Registration failed: {content}";
                }
            }
        }
        catch (Exception ex)
        {
            // Handle network or server errors
            Message = $"An error occurred during registration: {ex.Message}";
        }
    }
}