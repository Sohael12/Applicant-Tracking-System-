@page "/create-vacancy"
@using Stageproject_ATS_AP2025Q2.Models
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Stageproject_ATS_AP2025Q2.Services
@using System.Security.Claims
@rendermode InteractiveServer

@inject AuthenticationStateProvider AuthStateProvider
@inject VacancyNotificationService VacancyNotificationService
@inject VacancyService VacancyService
@inject NavigationManager NavigationManager

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="text-center mb-10">
            <div class="mx-auto w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-3">Create New Job Vacancy</h1>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Fill in the details below to publish a new career opportunity and attract top talent to your organization.
            </p>
        </div>

        <!-- Form Card -->
        <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-indigo-700 px-6 py-4">
                <h2 class="text-xl font-semibold text-white">Vacancy Details</h2>
            </div>
            
            <div class="p-8">
                <EditForm EditContext="editContext" OnValidSubmit="@SubmitForm" class="space-y-8">
                    <DataAnnotationsValidator />
                    <Blazorise.ValidationSummary />

                    <!-- Job Information Section -->
                    <div class="space-y-6">
                        <!-- Title -->
                        <div>
                            <label for="Title" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                                <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Job Title
                            </label>
                            <InputText id="Title" @bind-Value="formModel.Title"
                                       class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                       placeholder="Enter the job title (e.g., Senior Software Engineer)" />
                            <ValidationMessage For="@(() => formModel.Title)" class="text-sm text-red-500 mt-1" />
                        </div>

                        <!-- Description -->
                        <div>
                            <label for="Description" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                                <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                                </svg>
                                Job Description
                            </label>
                            <InputTextArea id="Description" @bind-Value="formModel.Description"
                                           class="w-full border border-gray-300 rounded-lg px-4 py-3 h-32 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
                                           placeholder="Provide a detailed description of the role, responsibilities, and requirements..." />
                            <ValidationMessage For="@(() => formModel.Description)" class="text-sm text-red-500 mt-1" />
                        </div>

                        <!-- Date Information -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Start Date -->
                            <div>
                                <label for="StartDate" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                                    <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    Start Date
                                </label>
                                <div class="relative">
                                    <InputDate id="StartDate" @bind-Value="formModel.StartDate"
                                               class="w-full border border-gray-300 rounded-lg px-4 py-3 bg-gray-50 text-gray-500 cursor-not-allowed" disabled />
                                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-400">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                </div>
                                <p class="text-xs text-gray-500 mt-1">Automatically set to today's date</p>
                            </div>

                            <!-- Deadline -->
                            <div>
                                <label for="Deadline" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                                    <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Application Deadline
                                </label>
                                <div class="relative">
                                    <InputDate id="Deadline" @bind-Value="formModel.Deadline"
                                               class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                               min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-400">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                </div>
                                <ValidationMessage For="@(() => formModel.Deadline)" class="text-sm text-red-500 mt-1" />
                            </div>
                        </div>

                        <!-- Department -->
                        <div>
                            <label for="Department" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                                <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                                Department
                            </label>
                            <InputText id="Department" @bind-Value="formModel.Department"
                                       class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                       placeholder="Enter the department name (e.g., Engineering, Marketing, HR)" />
                            <ValidationMessage For="@(() => formModel.Department)" class="text-sm text-red-500 mt-1" />
                        </div>

                        <!-- Created By -->
                        <div>
                            <label for="CreatedBy" class="block text-sm font-medium text-gray-700 mb-2 flex items-center">
                                <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Created By
                            </label>
                            <InputText id="CreatedBy" @bind-Value="formModel.CreatedBy"
                                       class="w-full border border-gray-300 rounded-lg px-4 py-3 bg-gray-50 text-gray-600" readonly />
                            <ValidationMessage For="@(() => formModel.CreatedBy)" class="text-sm text-red-500 mt-1" />
                        </div>
                    </div>

                    <!-- Notification Section -->
                    <div class="bg-blue-50 rounded-lg p-6 border border-blue-200">
                        <div class="flex items-start space-x-3">
                            <div class="flex-shrink-0">
                                <InputCheckbox @bind-Value="notifyUsers"
                                               class="h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500 mt-0.5" />
                            </div>
                            <div class="flex-1">
                                <label class="block text-sm font-medium text-gray-900 mb-1">
                                    üìß Notify All Users by Email
                                </label>
                                <p class="text-sm text-gray-600">
                                    When enabled, all registered users will receive an email notification with the complete vacancy details, 
                                    including the job description and application deadline.
                                </p>
                                <div class="mt-2 flex items-center text-sm text-blue-600">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Recommended for important positions
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row justify-between items-center pt-6 border-t border-gray-200 space-y-4 sm:space-y-0">
                        <button type="button" 
                                @onclick="@(() => NavigationManager.NavigateTo("/vacancies"))"
                                class="w-full sm:w-auto px-6 py-3 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition-colors flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Back to Vacancies
                        </button>
                        
                        <button type="submit"
                                class="w-full sm:w-auto bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold px-8 py-3 rounded-lg shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-200 flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Create Vacancy
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private EditContext editContext;
    private bool notifyUsers = false;

    [SupplyParameterFromForm]
    public Vacancy formModel { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        editContext = new EditContext(formModel);
        formModel.StartDate = DateTime.Now;

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var firstName = user.FindFirst("FirstName")?.Value ?? "";
            var lastName = user.FindFirst("LastName")?.Value ?? "";
            formModel.CreatedBy = $"{firstName} {lastName}".Trim();
        }
        else
        {
            formModel.CreatedBy = "Unknown User";
        }
    }

    private async Task SubmitForm()
    {
        if (!formModel.Deadline.HasValue)
        {
            Console.WriteLine("Deadline is required!");
            return;
        }

        await VacancyService.AddVacancyAsync(formModel);

        if (notifyUsers)
        {
            Console.WriteLine("‚úÖ Checkbox checked - sending email notifications...");
            await VacancyNotificationService.NotifyUsersAboutNewVacancy(formModel);
        }
        else
        {
            Console.WriteLine("‚ùå Checkbox not checked - no emails sent.");
        }

        NavigationManager.NavigateTo("/vacancies");
    }
}